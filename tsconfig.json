{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "DOM",
      "ESNEXT",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,    
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./typings",
    "typeRoots": [
      "./src/typings"
    ],
    "allowJs": true,
    "isolatedModules": true,    
    "noEmit": true,
  },
  "exclude": [
    "node_modules",    
  ],
  "include": [
    "src/native",
    "src/static",
    "src/web",
    "src"
  ]
}
